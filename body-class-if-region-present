function THEMENAME_preprocess_page(&$vars, $hook) {
  $body_classes = array($vars['body_classes']);
  if ($vars['region_machine_name']) {
    $body_classes[] = 'desired-class';
  }
  $vars['body_classes'] = implode(' ', $body_classes);
}
// Replace THEMENAME with the machine name of the theme
// Replace region_machine_name with the machine name of the region
// Replace desired-class with the class you need to be added to the body element
